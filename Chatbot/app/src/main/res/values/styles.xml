<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="bot_error_item_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/top_bottom_margin</item>
        <item name="android:layout_marginBottom">@dimen/top_bottom_margin</item>
        <item name="android:padding">@dimen/padding_chat_container</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@android:drawable/ic_menu_call</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="send_button">
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@android:drawable/ic_menu_send</item>
    </style>

    <style name="date_time_text">
        <item name="android:padding">@dimen/top_bottom_margin</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">#123456</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
